# Maintainer: Jaroslav Lichtblau <svetlemodry@archlinux.org>

_realname=sdcv
pkgname=("${MINGW_PACKAGE_PREFIX}-${_realname}")
pkgver=0.5.3
pkgrel=1
pkgdesc="StarDict Console Version"
arch=('any')
mingw_arch=('mingw32' 'mingw64')
url="https://dushistov.github.io/sdcv/"
license=('GPL')
depends=("${MINGW_PACKAGE_PREFIX}-glib2" "libreadline" "${MINGW_PACKAGE_PREFIX}-zlib")
makedepends=("${MINGW_PACKAGE_PREFIX}-cmake" "${MINGW_PACKAGE_PREFIX}-ninja" "${MINGW_PACKAGE_PREFIX}-glib2")
provides=('stardict')
#changelog=$pkgname.changelog
source=(${_realname}-$pkgver.tar.gz::https://github.com/Dushistov/${_realname}/archive/v$pkgver.tar.gz)
sha256sums=('75fb95b1607fdd2fb9f7795d3432d295904614150575ae539202f680499803c9')

prepare() {
  cd ${_realname}-${pkgver}
  patch -p1 -i ../../001-sdcv-0.5.3-fix-mingw-build.patch

}

build() {
  cd ${_realname}-${pkgver}

  rm -rf ./build
  install -d build
  cd build

  cmake -DBUILD_TESTS=True -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=${pkgdir}/${MINGW_PREFIX} ..

  ninja
  ninja lang
}

check() {
  echo "Checking..."
  cd ${_realname}-${pkgver}/build
  ninja test
}

package() {
  echo "Packing..."
  cd ${_realname}-${pkgver}/build
  ninja "install/local"
}
